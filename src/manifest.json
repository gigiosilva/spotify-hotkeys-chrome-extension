{
    "manifest_version": 2,
    "name": "YouTube Hotkeys",
    "description": "Your YouTube Hotkeys for play, pause, play next video and repeat.",
    "version": "1.1",
    "incognito": "split",
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "commands": {
      "next": {
         "description": "Next track",
         "suggested_key": "Alt+Shift+Period"
      },
      "play-pause": {
         "description": "Play/Pause",
         "suggested_key": "Alt+Shift+P"
      },
      "previous": {
         "description": "Previous track",
         "suggested_key": "Alt+Shift+Comma"
      },
      "repeat": {
       "description": "Repeat",
       "suggested_key": "Alt+Shift+R"
      }
    },
    "browser_action": {
      "default_icon": "assets/icon.png",
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      "script.js",
      "content.js"
    ],
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*", 
      "background",
      "contentSettings"
    ],
    "icons": { 
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png" 
    }
  }